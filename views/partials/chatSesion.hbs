<form action="" id="formulario">
  <div class="row g-3 mt-3 mb-2">
    <div class="col">
      <input type="email" class="form-control" placeholder="Email" name="email" id="email" required>
    </div>
  </div>
  <div class="mb-3">
      <textarea class="form-control mb-2" id="comentario" placeholder="Escribe tu comentario aqui..." rows="3" name="message"></textarea>
      <button type="button" onclick="enviarMensaje()" id="send" class="btn btn-success">Enviar</button>
  </div>
</form>